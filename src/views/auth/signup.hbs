<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Sign Up</h3>
                    <div class="card-body">
                        <form action="/signup" method="POST">
                            <div class="form-group mb-3">
                                <input type="text" name="name" placeholder="Name" class="form-control" autofocus>
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="first_last_name" placeholder="First last name" class="form-control">
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="second_last_name" placeholder="Second last name" class="form-control">
                            </div> 
                            <div class="form-group mb-3">
                                <input type="text" name="email" placeholder="Email" class="form-control">
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="enrollment" placeholder="Enrollment" class="form-control">
                            </div> 
                            <div class="form-group mb-3">
                                <input type="password" name="password" placeholder="Password" class="form-control">
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="rol" placeholder="Rol" class="form-control">
                            </div>
                            <div class="formgroup mb-3">
                                <button class="btn btn-success btn-block">
                                    Sign Up
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>